{
  "name": "groovy-lsp",
  "displayName": "Groovy Language Server",
  "description": "Language Server Protocol support for Groovy with enhanced Spock framework support",
  "version": "0.0.1",
  "publisher": "groovy-lsp",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": ["Programming Languages"],
  "keywords": ["groovy", "spock", "language-server", "lsp"],
  "activationEvents": ["onLanguage:groovy"],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "groovy",
        "aliases": ["Groovy", "groovy"],
        "extensions": [".groovy", ".gradle", ".gvy", ".gy", ".gsh"],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Groovy Language Server",
      "properties": {
        "groovy-lsp.trace.server": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "bun run compile",
    "compile": "bun x esbuild src/extension.ts --bundle --platform=node --outfile=out/extension.js --external:vscode",
    "watch": "tsc -watch -p ./",
    "lint": "biome check ./src",
    "lint:fix": "biome check --write ./src",
    "format": "biome format --write ./src",
    "test": "bun test",
    "test:integration": "xvfb-run -a bun run scripts/run-integration.ts",
    "test:scenarios": "bun scripts/generate-test-scenarios.ts",
    "coverage": "c8 --check-coverage --lines 80 --functions 80 --branches 80 bun test"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.0.1",
    "@types/vscode": "^1.101.0",
    "@vscode/test-electron": "^2.4.1",
    "c8": "^10.1.3",
    "esbuild": "^0.25.5",
    "glob": "^11.0.0",
    "mocha": "^10.8.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "c8": {
    "include": ["src/**/*.ts"],
    "exclude": ["**/*.test.ts", "**/*.spec.ts"],
    "reporter": ["text", "lcov", "html"]
  }
}
